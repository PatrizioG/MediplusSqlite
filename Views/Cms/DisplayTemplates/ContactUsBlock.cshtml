@model PiranhaMVC.Blocks.ContactUsBlock

<section class="ftco-section contact-section" id="@Model.Id">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2 class="mb-4">@Model.Title</h2>
                @Html.Raw(Model.Description)
            </div>
        </div>
        <div class="row d-flex contact-info mb-5">
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center bg-light">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-map-signs"></span>
                    </div>
                    <h3 class="mb-4">Indirizzo</h3>
                    @Html.Raw(Model.Address)
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center bg-light">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-phone2"></span>
                    </div>
                    <h3 class="mb-4">Telefono</h3>
                    <p><a href="tel://@((string)Model.Number)">@Html.Raw(Model.Number)</a></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center bg-light">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-paper-plane"></span>
                    </div>
                    <h3 class="mb-4">Email</h3>
                    <p><a href="mailto:@((string)Model.Email)">@Html.Raw(Model.Email)</a></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center bg-light">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-globe"></span>
                    </div>
                    <h3 class="mb-4">Website</h3>
                    <p><a href="https://@Model.Website.Value">@Html.Raw(Model.Website)</a></p>
                </div>
            </div>
        </div>
        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-action="Form" class="bg-light p-5 contact-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="text" asp-for="ContactForm.Name" class="form-control" placeholder="Il tuo nome*">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="ContactForm.Email" class="form-control" placeholder="Il tuo indirizzo di posta*">
                    </div>
                    <div class="form-group">
                        <textarea asp-for="ContactForm.Message" id="" cols="30" rows="7" class="form-control" placeholder="Lasciaci un messaggio*"></textarea>
                    </div>

                    <div class="g-recaptcha" data-sitekey="6LdGJb8ZAAAAAI2CB20ljCZeVHl0vUNsJDaK0chY"></div><br />

                    <div class="form-group">
                        <input type="submit" value="Invia Messaggio" class="btn btn-secondary py-3 px-5">
                    </div>
                </form>
            </div>

            <div class="col-md-6 d-flex">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2874.4064515211035!2d12.910976515506045!3d43.90955847911331!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x132d19476c6ba45b%3A0xd940ee95522d4299!2sPiazza%20del%20Popolo%2C%2061121%20Pesaro%20PU!5e0!3m2!1sit!2sit!4v1598171092409!5m2!1sit!2sit" frameborder="0" style="overflow:hidden;border:0;height:600px;width:100%" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
    </div>
</section>